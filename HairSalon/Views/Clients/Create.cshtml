@{
  Layout = "_Layout";
}

@using System.Linq;
@model HairSalon.Models.Client;

<h1>Add a Client</h1>

@if (Enumerable.Count(ViewBag.StylistId) == 0)
{
  <p>I'm sorry, no stylists are available at this time.</p>
}
else{
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")<br>

    <input type="submit" value="Add Client" />
  }
}